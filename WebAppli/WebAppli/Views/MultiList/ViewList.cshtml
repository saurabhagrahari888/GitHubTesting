@model IEnumerable<WebAppli.Controllers.tstclass>
@{
    ViewBag.Title = "ListValues";
}

<h2>ListValues</h2>
<table>
    <thead>
    <th>
        Id
    </th>
    <th>
        Name
    </th>
    <th>
        Address
    </th>
    <th>
        Action Results
    </th>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Address
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @id = item.Id })
            </td>
        </tr>
    }
</table>


